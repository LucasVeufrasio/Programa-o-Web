{
    "compilerOptions": {
      "esModuleInterop": true,
      "skipLibCheck": true,
      "strict": true,
      "lib": ["ESNext"],
      "target": "ESNext",
      "module": "CommonJS",
      "moduleResolution": "Node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "rootDir": "src",
      "outDir": "build"
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }
  